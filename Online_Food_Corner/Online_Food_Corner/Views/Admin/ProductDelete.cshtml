@model Online_Food_Corner.Models.Product

@{
    ViewBag.Title = "Product Delete";
    ViewBag.Main = "Product";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.product_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.product_type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.product_Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.product_picture)
        </dt>

        <dd>
            @{
                string imageBase64 = Convert.ToBase64String(Model.product_picture);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);

            }
            <img src="@imageSrc" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.product_quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_quantity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info" /> |
            @Html.ActionLink("Back to List", "ProductList")
        </div>
    }
</div>
